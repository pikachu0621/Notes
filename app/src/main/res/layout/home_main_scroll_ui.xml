<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 心情  -->
    <include layout="@layout/home_main_list_mood_ui"/>


    <!-- 最近任务  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:src="@drawable/home_main_task_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/id_home_main_scroll_textView_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_main_mood_7"
                android:textColor="@color/color_515151"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_home_main_scroll_recyclerView_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never" />

    </LinearLayout>


    <!-- 账单管理  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:src="@drawable/home_main_account_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/id_home_main_scroll_textView_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_main_mood_8"
                android:textColor="@color/color_515151"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
      <include layout="@layout/home_main_list_account_ui"/>
    </LinearLayout>


    <!-- 最近笔记  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:src="@drawable/home_main_diary_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/id_home_main_scroll_textView_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_main_mood_9"
                android:textColor="@color/color_515151"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_home_main_scroll_recyclerView_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/home_main_mood_10"
        android:textColor="@color/color_bbbbbb"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>
</LinearLayout>
